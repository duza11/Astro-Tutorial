---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = '概要';

const blogTechs = ['Astro', 'Netlify'];

const interestedTechs = ['JavaScript', 'TypeScript', 'React', 'Astro'];
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <title>{pageTitle}</title>
    <style>
      h1 {
        color: purple;
        font-size: 4rem;
      }
    </style>
  </head>
  <body>
    <Header />
    <h1>{pageTitle}</h1>
    <h2>このサイトについて</h2>
    <p>
      このサイトは{blogTechs.join('、')}で作成しています。
    </p>
    <h2>興味</h2>
    <ul>
      {interestedTechs.map((language) => <li class="skill">{language}</li>)}
    </ul>
    <Footer />
    <script>
      import '../scripts/menu.js';
    </script>
  </body>
</html>
